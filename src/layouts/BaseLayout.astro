---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import { execSync } from 'node:child_process';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;

let commitSha = 'unknown';
let commitDateIso = '';

try {
  commitSha = execSync('git log -1 --format=%h', { encoding: 'utf-8' }).trim();
  commitDateIso = execSync('git log -1 --format=%cI', { encoding: 'utf-8' }).trim();
} catch (error) {
  commitSha = 'unknown';
  commitDateIso = '';
}

const commitDate = commitDateIso ? new Date(commitDateIso) : null;
const formattedCommitDate = commitDate
  ? commitDate.toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' })
  : 'Unknown';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="page-content" aria-label="Content">
      <div class="wrapper">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="wrapper">
        <p class="footer-line">
          Built with <a href="https://astro.build">Astro</a> · Build:
          <time datetime={commitDateIso || undefined}>{formattedCommitDate}</time> ·
          Commit: <code>{commitSha}</code>
        </p>
      </div>
    </footer>
  </body>
</html>
